{
  "name": "profesor-g-website",
  "version": "1.0.0",
  "description": "Sitio web moderno para El Profesor G - Servicios de asesoría de tesis",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run optimize-images && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:a11y": "playwright test tests/e2e/accessibility.spec.js",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "lighthouse": "lhci autorun",
    "optimize-images": "node scripts/optimize-images.js",
    "generate-favicons": "node scripts/generate-favicons.js",
    "performance-check": "node scripts/performance-check.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@vitejs/plugin-legacy": "^5.2.0",
    "autoprefixer": "^10.4.16",
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-html": "^8.1.1",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.3.6",
    "vite": "^5.0.8",
    "vite-plugin-html": "^3.2.0",
    "vitest": "^1.0.4",
    "@lhci/cli": "^0.12.0",
    "@axe-core/playwright": "^4.8.2",
    "sharp": "^0.32.6",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "dependencies": {
    "lucide": "^0.294.0",
    "nodemailer": "^6.9.7"
  },
  "keywords": [
    "tesis",
    "asesoría académica",
    "profesor g",
    "website",
    "responsive"
  ],
  "lint-staged": {
    "*.{js,html}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  },
  "author": "El Profesor G",
  "license": "MIT"
}
